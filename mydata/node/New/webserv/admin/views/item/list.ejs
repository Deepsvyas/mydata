<%- include ../layouts/adminheader.ejs %>
<%- include ../layouts/adminsidebar.ejs %>
<div class="content-wrapper">
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-info">
                    <div class="box-header">
                        <div class="pull-left">
                            <h3 class="box-title">Items List</h3>
                        </div>
                        <div class="pull-right">
                            <a href="#" class="btn btn-default back_to_history"> <span class="fa fa-arrow-left"> Go Back</a>
                            <a href="" class="btn btn-default refreshlist"> <span class="fa fa-refresh"></a>
                            <a href="" class="btn btn-info addItem"> <span class="fa fa-plus"> Add New </a>
                        </div>
                    </div>
                    <div class="box-body">
                    <table id="itemTable" class="table table-bordered table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th class="" >Sr. No.</th>
                                        <th class="" >Item Name</th>
                                        <th class="" >Shop Name</th>
                                        <th class="" >Category</th>
                                        <th class="" >Price</th>
                                        <th class="" >Quantity</th>
                                        <th class="" >Description</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                        </table>
                    </div>

                </div>
            </div>
        </div>

    </section>
</div>


<div class="modal fade" id="itemModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"> Add/Edit Item </h4>
            </div>
            <form role="form" id="itemFrm" name="itemFrm">
                <div class="modal-body">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-6">   
                                <label for="item_name"> Item Name </label>
                                <input type="text" class="form-control" id="item_name" name="item_name" placeholder="Enter Item Name">
                            </div>
                            <div class="col-lg-6">   
                                <label for="shop_id"> Shop Name </label>
                                <select class="form-control" id="shop_id" name="shop_id">
                                <%  for(var s in shops){ %>
                                    <option value="<%= s %>"><%= shops[s] %></option>
                                <% } %>
                                </select>
                                
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">   
                                <label for="category_id"> Category </label>
                                <select class="form-control" id="category_id" name="category_id">
                                <%  for(var i in categories){ %>
                                    <option value="<%= i %>"><%= categories[i] %></option>
                                <% } %>
                                </select>
                                
                            </div>
                            <div class="col-lg-6">   
                                <label for="price"> Price </label>
                                <input type="text" class="form-control" id="price" name="price" placeholder="Enter Price">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">   
                                <label for="available_qty"> Quantity </label>
                                <input type="text" class="form-control" id="available_qty" name="available_qty" placeholder="Enter Quantity">
                            </div>
                            <div class="col-lg-6">   
                                <label for="unit"> Unit </label>
                                <select class="form-control" id="unit" name="unit">
                                <%  for(var j in units){ %>
                                    <option value="<%= j %>"><%= units[j] %></option>
                                <% } %>
                                </select>
                                
                            </div>
                            
                        </div>
                        <div class="row">
                            <div class="col-lg-6">   
                                <label for="gst_slabs"> GST Slabs </label>
                                <select class="form-control" id="gst_slabs" name="gst_slabs">
                                <%  for(var k in gstslabs){ %>
                                    <option value="<%= k %>"><%= gstslabs[k] %></option>
                                <% } %>
                                </select>
                                
                            </div>
                            
                            
                        </div>
                        <div class="row">
                            
                            <div class="col-lg-12">   
                                <label for="description"> Description </label>
                                <textarea class="form-control" id="description" name="description" placeholder="Enter Description"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <input type="submit" class="btn btn-success submtBtn" id="submtBtn" value="Submit"> 
                </div>
            </form>
        </div>

    </div>
</div>
<script src="../../admin/item/list.js"></script>

<%- include ../layouts/adminfooter.ejs %>
